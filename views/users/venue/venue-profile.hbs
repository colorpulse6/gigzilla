<div class="intro">
  <h1>{{venueData.name}} Profile</h1>
</div>

<div class="profile-content">
  <div class="profile">
    <form method="POST" action="/home/venue/profile">
      <div class="form-head">
        <div>
          <img src="https://loremflickr.com/g/500/500/city,restaurant, club, bar/all">
        </div>
        <div class="form-main-info">
          <p><span>Name: </span>{{venueData.name}}</p>
          <p><span>Email: </span>{{venueData.email}}</p>
          <p><span>City: </span>{{venueData.cityName}}</p>
        </div>
      </div>
      <div class="form-group">
        <label for="imgUrl">Image URL</label>
        <input type="text" class="form-control" id="imgUrl" name="imgUrl" value="{{venueData.imgUrl}}" placeholder="https://loremflickr.com/g/500/500/city,restaurant, club, bar/all">
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="phoneNumber">Phone Number</label>
          <input type="tel" class="form-control" id="phoneNumber" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" name="phoneNumber"
            placeholder="123-456-7890" value="{{venueData.phoneNumber}}">
        </div>
        <div class="form-group col-md-6">
          <label for="capacity">Capacity</label>
          <input type="number" class="form-control" id="capacity" name="capacity" placeholder="1000"
            value="{{venueData.capacity}}">
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="genre">Genre</label>
          <input type="text" class="form-control" id="genre" name="genre" placeholder="emo forever"
            value="{{venueData.genre}}">
        </div>
        <div class="form-group col-md-6">
          <label for="type">Type</label>
          <input type="text" class="form-control" id="type" name="type" placeholder="bar" value="{{venueData.type}}">
        </div>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" name="description" id="description" rows="3" placeholder="A little bit about the venue..."></textarea>
      </div>

      {{#if venueData.backline}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="false" id="backline" name="backline" checked>
        <label class="form-check-label" for="backline">
          Backline
        </label>
      </div>
      {{/if}}

      {{#unless venueData.backline}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="true" id="backline" name="backline">
        <label class="form-check-label" for="backline">
          Backline
        </label>
      </div>
      {{/unless}}

      {{#if venueData.food}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="false" id="food" name="food" checked>
        <label class="form-check-label" for="food">
          Catering
        </label>
      </div>
      {{/if}}

      {{#unless venueData.food}}
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="true" id="food" name="food">
        <label class="form-check-label" for="food">
          Catering
        </label>
      </div>
      {{/unless}}
      <div class="button-center">
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </div>

    </form>

    {{#if errorMessage}}
    <div class="error">{{errorMessage}}</div>
    {{/if}}
  </div>
</div>




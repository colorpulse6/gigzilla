<div class="intro">
    <h1 style="margin-bottom: 20px;">{{tourData.name}}</h1>
    <a href="/home/venue"><button class="btn btn-secondary">Back to Tours</button></a>
</div>

<div class="tour">
    <div>
        <img src="https://loremflickr.com/g/500/500/{{tourData.name}}/all">
    </div>
    <div class="contact">
        <h3>Contact Tour</h3>
        <form method="POST" action="/home/venue/{{tourData._id}}">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="{{venueData.email}}" required>
            </div>
            <div class="form-group">
                <label for="message">Message</label>
                <textarea class="form-control" name="message" id="message" rows="3"
                    placeholder="Hey are you interested in playing at my venue?" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
    </div>
</div>



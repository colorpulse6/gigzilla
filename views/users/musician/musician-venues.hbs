<div class="intro">
  <h1 style="margin-bottom: 20px;">Hey {{musicianData.name}}</h1>
  <a href="/home/musician/{{tourId}}/{{cityName}}"><button class="btn btn-secondary">Back to City</button></a>
</div>

<div class="venue-info-page-main">
  <h2>{{venueInfo.name}}</h2>
  <div class="venue">
    <div class="venue-image">
      <img src="https://loremflickr.com/g/500/500/{{venueInfo.name}}/all">
    </div>
    <div class="venue-info">
      <p><b>Phone Number:</b> {{venueInfo.phoneNumber}}</p>
      <p><b>Type of Venue:</b> {{venueInfo.type}}</p>
      <p><b>Genre:</b> {{venueInfo.genre}}</p>
      <p><b>Description:</b> {{venueInfo.description}}</p>
      {{#if venueInfo.backline}}
      <p><b>Backline:</b> Yes</p>
      {{else}}
      <p><b>Backline:</b> No</p>
      {{/if}}

      {{#if venueInfo.food}}
      <p><b>Catering:</b> Yes</p>
      {{else}}
      <p><b>Catering:</b> No</p>
      {{/if}}

      <p><b>Capacity:</b> {{venueInfo.capacity}}</p>
    </div>

  </div>
  <div class="contact">
    <h3 style="margin-top: 20px;">Contact Venue</h3>
    <form method="POST" action="/home/musician/{{tourId}}/{{cityName}}/{{venueInfo._id}}">
      <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="{{musicianData.email}}" required>
      </div>
      <div class="form-group">
        <label for="message">Message</label>
        <textarea class="form-control" name="message" id="message" rows="3"
          placeholder="Hello we would like to play a set at your venue" required></textarea>
      </div>
      <div class="button-center">
        <button type="submit" class="btn btn-primary">Send Message</button>
      </div>
    </form>
  </div>
</div>
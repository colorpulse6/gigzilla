    <div class = "display-cities">
      {{#if tourData.cities}}
        {{#each tourData.cities}}
          <div class="each-city card">
            <img class="card-img" src="https://loremflickr.com/g/320/240/{{this.name}}" alt="Card image">
            <div class="card-img-overlay">
            <div class="card-body">
              <a href="/home/musician/{{../tourData._id}}/{{this.name}}"><h2>{{this.name}}</h2></a>
            <a href="/home/musician/delete/{{../tourData._id}}/{{this._id}}"><button class="button" name="delete" type="submit">Delete City</button></a>

            {{#if this.contactedByMusician}}
            <h6>Venues</h6>

            <div id="to-hide">
              {{#each this.possibleVenues}}
              <div class="venues-on-tour-page">

                <p>Contacted: <br> <a href="/home/musician/{{../../tourData._id}}/{{../../venue._id}}">{{this}}</a></p>
                
                <a href="/home/musician/{{../../tourData._id}}/{{../this._id}}/{{this}}/add"><button  class="button secondary-button confirm-button" >Confirm</button></a>

              </div>
                
              {{/each}}
              
            </div>
          
            {{/if}}  

            </div>  
            
            </div>
            {{#if this.selectedVenue}}
            <div class="city-confirmed">
          <p>Confirmed: {{this.selectedVenue.name}}</p>
        </div>
        {{/if}}

          </div>
          
             
        {{/each}}
    {{/if}}



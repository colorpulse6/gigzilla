<div class="signup-venue">
  <h1>Sign Up as a Venue</h1>

  <form method="POST" action="/signup/venue">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" placeholder="Bingo Tophat" name="name" required>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" placeholder="bingo@tophat.com" name="email" required>
        <small id="email" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group col-md-6">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="******" required>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="phoneNumber">Phone Number</label>
        <input type="tel" class="form-control" id="phoneNumber" pattern="[0-9]{3}[0-9]{3}[0-9]{4}" name="phoneNumber"
          placeholder="123-456-7890">
      </div>
      <div class="form-group col-md-6">
        <label for="cityName">City</label>
        <input type="text" class="form-control" id="cityName" name="cityName" placeholder="Madrid" required>
      </div>
    </div>
    <div class="form-group">
      <label for="capacity">Capacity</label>
      <input type="number" class="form-control" id="capacity" placeholder="1000" name="capacity" required>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="genre">Genre</label>
        <input type="text" class="form-control" id="genre" name="genre" placeholder="emo forever">
      </div>
      <div class="form-group col-md-6">
        <label for="type">Type</label>
        <input type="text" class="form-control" id="type" name="type" placeholder="bar">
      </div>
    </div>
    <div class="form-group">
      <label for="description">Bio</label>
      <textarea class="form-control" name="description" id="description" rows="3"
        placeholder="A little bit about the venue..."></textarea>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="true" id="backline" name="backline">
      <label class="form-check-label" for="backline">
        Backline
      </label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="true" id="food" name="food">
      <label class="form-check-label" for="food">
        Catering
      </label>
    </div>

    <button type="submit" class="btn btn-primary">Sign Up</button>
  </form>

  {{#if errorMessage}}
    <div class="error">{{errorMessage}}</div>
  {{/if}}
</div>

